# Winky Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider: "openai" or "openrouter"
WINKY_LLM_PROVIDER=openai

# OpenAI API Key (required for OpenAI provider)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# OpenRouter API Key (required for OpenRouter provider)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# LLM Model
# OpenAI examples: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# OpenRouter examples: anthropic/claude-3.5-sonnet, google/gemini-pro, meta-llama/llama-3-70b
WINKY_LLM_MODEL=gpt-4o

# OpenRouter Base URL (only needed for OpenRouter)
WINKY_LLM_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# Browser Configuration
# =============================================================================

# Browser executable path (optional - leave empty to use Playwright's bundled Chromium)
# Windows: C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/google-chrome
WINKY_BROWSER_EXECUTABLE_PATH=

# Headless mode: true or false
WINKY_BROWSER_HEADLESS=false

# Browser profile name
WINKY_BROWSER_PROFILE=default

# Viewport width
WINKY_BROWSER_VIEWPORT_WIDTH=1280

# Viewport height
WINKY_BROWSER_VIEWPORT_HEIGHT=720

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: error, warn, info, debug
WINKY_LOG_LEVEL=info

# Log retention in days
WINKY_LOG_RETENTION_DAYS=7

# =============================================================================
# ACP (Agent Client Protocol) Configuration
# =============================================================================

# Enable ACP server: true or false
WINKY_ACP_ENABLED=false

# ACP agent name
WINKY_ACP_AGENT_NAME=winky

# ACP agent title
WINKY_ACP_AGENT_TITLE=Winky Browser Agent

# =============================================================================
# Memory Configuration
# =============================================================================

# Enable persistent memory: true or false
WINKY_MEMORY_ENABLED=true

# SQLite database path
WINKY_MEMORY_DB_PATH=data/memory/winky.db
